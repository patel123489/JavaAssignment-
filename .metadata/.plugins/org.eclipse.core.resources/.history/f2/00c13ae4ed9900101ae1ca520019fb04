package OOPS;

class Pen {
//	data memeber 
	int price = 18;
	String color = "Red";

//	function memeber 
	public void toWrite() {
		System.out.println(price + " " + color);
	}
}

public class A001_ClassDemo {
	public static void main(String[] args) {

		Pen p1 = new Pen();
		p1.price = 45;
		p1.toWrite();

		Pen p2 = new Pen();
		p2.toWrite();
	}

}